<UserControl
    x:Class="RYCBEditorX.Dialogs.Views.EchoChamberControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Cursor="Hand"
    mc:Ignorable="d">
    <Grid>
        <Border
            x:Name="MainBorder"
            Background="Transparent"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect
                    x:Name="ShadowEffect"
                    BlurRadius="20"
                    ShadowDepth="0" />
            </Border.Effect>

            <Viewbox x:Name="ContentViewbox" Stretch="Uniform">
                <TextBlock
                    x:Name="ContentTextBlock"
                    FontFamily="Comic Sans MS"
                    FontWeight="Bold"
                    Text="Loading..."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Viewbox>
        </Border>
    </Grid>
</UserControl>