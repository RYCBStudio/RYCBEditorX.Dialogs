<hc:Window
    x:Class="RYCBEditorX.Dialogs.Views.PythonPackageManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:RYCBEditorX.Dialogs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RYCBEditorX.Dialogs.Models"
    Title="PythonPackageManager"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=models:PythonPackageManagerViewModel}"
    FontFamily="{DynamicResource Main}"
    mc:Ignorable="d">
    <Window.Resources>
        <FontFamily x:Key="Iconfont">
            /RYCBEditorX;component/Assets/Fonts/#ali-ifont
        </FontFamily>
        <Style x:Key="TabItemStyle" TargetType="{x:Type TabItem}">
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid
                            x:Name="templateRoot"
                            Background="Transparent"
                            SnapsToDevicePixels="True">
                            <TextBlock
                                x:Name="txt"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                Style="{StaticResource TextBlockBaseStyle}"
                                Text="{TemplateBinding Header}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{TemplateBinding Header}"
                                Visibility="Visible" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="true" />
                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type TabControl}}}" Value="Top" />
                                </MultiDataTrigger.Conditions>

                                <Setter TargetName="txt" Property="Foreground" Value="#fffea1" />
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="false" />
                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type TabControl}}}" Value="Left" />
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="templateRoot" Property="Opacity" Value="0.56" />
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="false" />
                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type TabControl}}}" Value="Bottom" />
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="templateRoot" Property="Opacity" Value="0.56" />
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="false" />
                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type TabControl}}}" Value="Right" />
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="templateRoot" Property="Opacity" Value="0.56" />
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="false" />
                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type TabControl}}}" Value="Top" />
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="templateRoot" Property="Opacity" Value="0.56" />
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="true" />
                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type TabControl}}}" Value="Top" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Panel.ZIndex" Value="1" />
                                <Setter TargetName="txt" Property="Foreground" Value="#fffea1" />
                            </MultiDataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TabControlStyle" TargetType="{x:Type TabControl}">
            <Setter Property="Padding" Value="2" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid
                            x:Name="templateRoot"
                            ClipToBounds="True"
                            KeyboardNavigation.TabNavigation="Local"
                            SnapsToDevicePixels="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="ColumnDefinition0" />
                                <ColumnDefinition x:Name="ColumnDefinition1" Width="0" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="RowDefinition0" Height="Auto" />
                                <RowDefinition x:Name="RowDefinition1" Height="*" />
                            </Grid.RowDefinitions>
                            <UniformGrid
                                x:Name="HeaderPanel"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0"
                                Panel.ZIndex="1"
                                Background="Transparent"
                                IsItemsHost="True"
                                KeyboardNavigation.TabIndex="1"
                                Rows="1" />
                            <Line
                                Margin="0,0,0,1"
                                VerticalAlignment="Bottom"
                                SnapsToDevicePixels="True"
                                Stroke="White"
                                StrokeThickness="0.1"
                                X1="0"
                                X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />
                            <Border
                                x:Name="ContentPanel"
                                Grid.Row="1"
                                Grid.Column="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                KeyboardNavigation.DirectionalNavigation="Contained"
                                KeyboardNavigation.TabIndex="2"
                                KeyboardNavigation.TabNavigation="Local">
                                <ContentPresenter
                                    x:Name="PART_SelectedContentHost"
                                    Margin="0"
                                    Content="{TemplateBinding SelectedContent}"
                                    ContentSource="SelectedContent"
                                    ContentStringFormat="{TemplateBinding SelectedContentStringFormat}"
                                    ContentTemplate="{TemplateBinding SelectedContentTemplate}"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="TabStripPlacement" Value="Bottom">
                                <Setter TargetName="HeaderPanel" Property="Grid.Row" Value="1" />
                                <Setter TargetName="ContentPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                <Setter TargetName="RowDefinition1" Property="Height" Value="Auto" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement" Value="Left">
                                <Setter TargetName="HeaderPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="ContentPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="HeaderPanel" Property="Grid.Column" Value="0" />
                                <Setter TargetName="ContentPanel" Property="Grid.Column" Value="1" />
                                <Setter TargetName="ColumnDefinition0" Property="Width" Value="Auto" />
                                <Setter TargetName="ColumnDefinition1" Property="Width" Value="*" />
                                <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                <Setter TargetName="RowDefinition1" Property="Height" Value="0" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement" Value="Right">
                                <Setter TargetName="HeaderPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="ContentPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="HeaderPanel" Property="Grid.Column" Value="1" />
                                <Setter TargetName="ContentPanel" Property="Grid.Column" Value="0" />
                                <Setter TargetName="ColumnDefinition0" Property="Width" Value="*" />
                                <Setter TargetName="ColumnDefinition1" Property="Width" Value="Auto" />
                                <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                <Setter TargetName="RowDefinition1" Property="Height" Value="0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="templateRoot" Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style
            x:Key="TBlockRight"
            BasedOn="{StaticResource TextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>
        <Style
            x:Key="TBlockLeft"
            BasedOn="{StaticResource TextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="TextAlignment" Value="Left" />
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl
            x:Name="MainTabCtrl"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Style="{StaticResource TabControlStyle}">
            <TabItem
                x:Name="Online"
                Height="38"
                Header="Pypi Online"
                IsEnabled="False"
                Style="{StaticResource TabItemStyle}">
                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="8*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9.7*" />
                            <ColumnDefinition Width="0.3*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="SearchBox"
                            Margin="5,5,25,5"
                            Background="Transparent"
                            Foreground="White"
                            InputMethod.IsInputMethodEnabled="True"
                            IsReadOnly="False"
                            KeyDown="SearchOnKeyDown">
                            <TextBox.RenderTransform>
                                <TranslateTransform x:Name="Tt" />
                            </TextBox.RenderTransform>
                        </TextBox>
                        <Button
                            Grid.ColumnSpan="2"
                            Width="48"
                            Margin="752,0,0,0"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="Search"
                            Content="&#xe623;"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="16"
                            Foreground="Gray" />
                    </Grid>
                    <ListBox
                        x:Name="ResLst"
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        SelectionChanged="GetPkgInfo"
                        SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="grid">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*" />
                                        <RowDefinition Height="5*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        FontWeight="Bold"
                                        Style="{StaticResource TBlockLeft}"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Foreground="Gray"
                                        Style="{StaticResource TBlockRight}"
                                        Text="{Binding Version}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Background="Transparent"
                                        Style="{StaticResource TBlockLeft}"
                                        Text="{Binding Description}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="6*" />
                        </Grid.RowDefinitions>
                        <Label
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Name" />
                        <Label
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Version" />
                        <Label
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Description" />
                        <TextBlock
                            x:Name="TBlkName"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlockBaseStyle}"
                            Text="" />
                        <TextBlock
                            x:Name="TBlkVer"
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlockBaseStyle}"
                            Text="" />
                        <TextBox
                            x:Name="TBlkDesc"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5,5"
                            AutoWordSelection="True"
                            Background="Transparent"
                            Foreground="White"
                            IsReadOnly="True"
                            Text=""
                            TextWrapping="WrapWithOverflow" />
                    </Grid>
                    <DockPanel Grid.Row="3" Grid.Column="1">
                        <TextBlock
                            x:Name="CurrentPage"
                            Margin="100,0,0,0"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontSize="20"
                            Style="{StaticResource TextBlockBaseStyle}"
                            Text="1 / 1" />
                        <Button
                            Margin="2.5,0,2.5,0"
                            Command="{Binding EndPageCmd}"
                            Content="&#xe650;"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="16" />
                        <Button
                            Margin="2.5,0,2.5,0"
                            Command="{Binding NextPageCmd}"
                            Content="&#xe662;"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="16" />
                        <Button
                            Margin="2.5,0,2.5,0"
                            Command="{Binding PreviousPageCmd}"
                            Content="&#xe663;"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="16" />
                        <Button
                            Margin="2.5,0,2.5,0"
                            Command="{Binding StartPageCmd}"
                            Content="&#xe658;"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="16" />
                        <Button
                            Margin="2.5,0,10,0"
                            HorizontalAlignment="Right"
                            Command="{Binding DownloadCmd}"
                            Content="&#xe6f7;"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="16" />
                    </DockPanel>
                    <Border
                        x:Name="Mask"
                        Grid.RowSpan="3"
                        Grid.ColumnSpan="2"
                        Background="Black"
                        Opacity="0.7"
                        Visibility="Hidden" />
                    <hc:LoadingCircle
                        x:Name="Loading"
                        Grid.RowSpan="3"
                        Grid.ColumnSpan="2"
                        Width="200"
                        Height="200"
                        DotDiameter="15"
                        Visibility="Hidden" />
                </Grid>
            </TabItem>
            <TabItem
                x:Name="Local"
                Height="38"
                Cursor="Hand"
                Header="Local Python"
                Initialized="Local_Initialized"
                Selector.IsSelected="True"
                Style="{StaticResource TabItemStyle}">
                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="8.5*" />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9.7*" />
                            <ColumnDefinition Width="0.3*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="SearchBoxLocal"
                            Margin="5,5,25,5"
                            Background="Transparent"
                            InputMethod.IsInputMethodEnabled="True"
                            IsReadOnly="False"
                            KeyDown="SearchOnKeyDown"
                            Tag="Local">
                            <TextBox.RenderTransform>
                                <TranslateTransform x:Name="TtLocal" />
                            </TextBox.RenderTransform>
                        </TextBox>
                        <Button
                            Grid.ColumnSpan="2"
                            Width="49"
                            Margin="751,0,0,0"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="Search"
                            Content="&#xe623;"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="16"
                            Foreground="Gray"
                            Tag="Local" />
                    </Grid>
                    <ListBox
                        x:Name="ListBoxLocalPackages"
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        SelectionChanged="GetPkgInfo"
                        SelectionMode="Single"
                        Tag="Local">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="grid">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*" />
                                        <RowDefinition Height="2.5*" />
                                        <RowDefinition Height="2.5*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        FontWeight="Bold"
                                        Style="{StaticResource TBlockLeft}"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Foreground="Gray"
                                        Style="{StaticResource TBlockRight}"
                                        Text="{Binding Author}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Style="{StaticResource TBlockLeft}"
                                        Text="{Binding Version}" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Background="Transparent"
                                        Style="{StaticResource TBlockLeft}"
                                        Text="{Binding Summary}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Label
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Name" />
                        <Label
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Author" />
                        <Label
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Version" />
                        <Label
                            Grid.Row="3"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Description" />
                        <Label
                            Grid.Row="4"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Required By: " />
                        <Label
                            Grid.Row="5"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Content="Requires: " />
                        <TextBlock
                            x:Name="TBlkNameLocal"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlockBaseStyle}"
                            Text="" />
                        <TextBlock
                            x:Name="TBlkAuthorLocal"
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlockBaseStyle}"
                            Text="" />
                        <TextBlock
                            x:Name="TBlkVerLocal"
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlockBaseStyle}"
                            Text="" />
                        <TextBox
                            x:Name="TBlkDescLocal"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5,5"
                            AutoWordSelection="True"
                            Background="Transparent"
                            IsReadOnly="True"
                            Text=""
                            TextWrapping="WrapWithOverflow" />
                        <TextBox
                            x:Name="TBlkRqdLocal"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5,5"
                            AutoWordSelection="True"
                            Background="Transparent"
                            IsReadOnly="True"
                            Text=""
                            TextWrapping="WrapWithOverflow" />
                        <TextBox
                            x:Name="TBlkRqsLocal"
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="5,5"
                            AutoWordSelection="True"
                            Background="Transparent"
                            IsReadOnly="True"
                            Text=""
                            TextWrapping="WrapWithOverflow" />
                    </Grid>
                    <hc:ButtonGroup Grid.Row="2" Grid.Column="1">
                        <Button
                            x:Name="UninstallButton"
                            Click="Uninstall"
                            Content="&#xe628;"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="20" />
                    </hc:ButtonGroup>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</hc:Window>
